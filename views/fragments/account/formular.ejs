<form
  id="register-form"
  method="post"
  class="date"
  action="<%= locals.action %>"
  enctype="multipart/form-data">

  <label class="form-label" for="in-first-name">
    First Name:
  </label>
  <input
    type="text"
    name="first-name"
    id="in-first-name"
    value="Pharaday"
    class="form-control"
    pattern="[A-Z][a-z]+([-\.][A-Z][a-z]+)?"
    required>

  <label class="form-label" for="in-last-name">
    Last Name:
  </label>
  <input
    type="text"
    name="last-name"
    class="form-control"
    id="in-last-name"
    pattern="[A-Z][a-z]+([-\.][A-Z][a-z]+)?"
    value="Michael"
    required>

  <label class="form-label" for="in-username">
    Username:
  </label>
  <input
    type="text"
    name="username"
    id="in-username"
    class="form-control"
    value="User<%= Math.floor(Math.random()*100000) %>"
    required
    pattern="[A-Za-z0-9\-]{3,}">

  <label class="form-label" for="in-password">
    Password:
  </label>
  <input
    id="in-password"
    type="password"
    required
    class="form-control"
    name="password"
    value="aA.33"
    pattern="(?=.*[A-Z])(?=.*[a-z])(?=.*\d.*\d)(?=.*\.).*"
    required>
  <div class="form-text">
    The password must contain 1 lowercase letter, 1 uppercase
    letter, at least two digits and a dot.
  </div>

  <label class="form-label" for="in-password-again">
    Password Again:
  </label>
  <input
    id="in-password-again"
    type="password"
    name="password-again"
    class="form-control"
    value="aA.33"
    pattern="(?=.*[A-Z])(?=.*[a-z])(?=.*\d.*\d)(?=.*\.).*"
    required>
  <div class="form-text">
    The password must contain 1 lowercase letter, 1 uppercase
    letter, at least two digits and a dot.
  </div>

  <label class="form-label" for="in-email">
    Email:
  </label>
  <input
    type="text"
    name="email"
    id="in-email"
    class="form-control"
    value="andreeionescu67@gmail.com"
    pattern="(?:[^\.][a-zA-Z\d\.]+[^\.])@(?:[^\.][a-zA-Z\d\.]+[^\.])"
    size="50"
    required>

  <label class="form-label" for="in-color">
    Chat Color:
  </label>
  <select class="form-select" name="color" id="in-color">
    <option value="red" selected>red</option>
    <option value="blue">blue</option>
    <option value="green">green</option>
  </select>

  <label for="in-photo" class="form-label">
    Photo:
  </label>
  <input
    class="form-control"
    id="in-photo"
    type="file"
    name="photo">

  <div class="form-check form-switch">
    <label class="form-check-label" for="in-sight-issue">
      Sight Issue
    </label>
    <input
      class="form-check-input"
      role="switch"
      id="in-sight-issue"
      type="checkbox"
      name="sight-issue">
  </div>

  <div class="d-grid gap-2">
    <button
      class="btn btn-block btn-primary"
      id="in-submit"
      type="submit">
      Send
    </button>
    <button
      class="btn btn-block btn-secondary"
      id="in-reset"
      type="reset">
      Reset
    </button>
  </div>
</form>